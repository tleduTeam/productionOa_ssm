<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper
	namespace="com.megagao.production.ssm.mapper.authority.SysOperationLogMapper">
	<!-- <delete id="deleteByPrimaryKey" parameterType="string"> delete from 
		t_branch where id=#{branchId} </delete> -->

	<insert id="insert" parameterType="SysOperationLog">
		insert into t_operationLog
		(come_time,user_id,username,l_desc) values
		(#{come_time},#{sysUser.id},#{username},#{l_desc})
	</insert>

	<insert id="writeLog" parameterType="SysOperationLog">
		INSERT into t_operationLog
		(come_time,user_id,username,l_desc) values
		(#{come_time},#{sysUser.id},#{username},#{l_desc})
	</insert>

	<select id="find" resultType="SysOperationLog">
		select * from t_operationLog ORDER BY come_time DESC
	</select>

	<select id="searchSysOperationLogById" resultType="SysOperationLog"
		parameterType="string">
		select * from t_operationLog where id like
		CONCAT('%',#{id},'%')
	</select>

	<select id="searchSysOperationLogByName" resultType="SysOperationLog"
		parameterType="string">
		select * from t_operationLog where username like
		CONCAT('%',#{name},'%' )
	</select>

	<!-- 批量删除 -->
	<delete id="deleteBatch">
		DELETE FROM t_operationLog WHERE id IN
		<foreach collection="array" item="id" open="(" close=")"
			separator=",">
			#{id}
		</foreach>
	</delete>

	<delete id="deleteByLoginLogId" parameterType="java.lang.String">
		delete from
		t_operationLog
		where id = #{id,jdbcType=VARCHAR}
	</delete>


</mapper>